<% provide(:title, 'Edit Event') %>
<h1>Please enter Event details: </h1>
<div class = "row">
	<div class = "span6 offset3">
		<%=nested_form_for(@event) do |f| %>
			<%=render 'shared/error_messages_events' %>
			<%= f.label :name %>
			<%= f.text_field :name %>

			
			

			<div class="well">

  			<div id="datetimepicker1" class="input-append date">
   			 <input data-format="dd/MM/yyyy hh:mm:ss" type="text" name = "date" value = "<%=@event.date%>"></input>
    		 <span class="add-on">
      		 <i data-time-icon="icon-time" data-date-icon="icon-calendar">
      		</i>
    		</span>
  			</div>
			</div>
			<script type="text/javascript">
  			$(function() {
   		 $('#datetimepicker1').datetimepicker({
      		language: 'pt-BR'

   			 });
  			});
		</script>


			<%=f.label :active%>
			<%=f.check_box :active %>
			<br><br>

			<%= f.fields_for :bets %>
			 <p><%= f.link_to_add "Add bet", :bets %></p>
	

			<%=f.submit "Save changes", class: "btn btn-large btn-primary" %>
			<%end%>
		</div>
	</div>	