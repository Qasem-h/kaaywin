<% provide(:title, 'Edit Event') %>
<div class = "itemForm">
<h1>Please enter Event details: </h1>
<div class = "row">
	<div class = "span3 offset1">
		<%=nested_form_for(@event) do |f| %>
			<%=render 'shared/error_messages_events' %>
			<%= f.label :name %>
			<%= f.text_field :name %>

			
			
			<input type="text" class='tinytext' id="datetimepicker" name='date' value = "<%=@event.date%>" ></input>
			<script type="text/javascript">
  			$(function() {
   		 $('#datetimepicker').datetimepicker({
   		 	dateFormat : 'yy-mm-dd',
      		
   			 });
  			});
		</script>

			


			<%=f.label :active%>
			<%=f.check_box :active %>
			<br><br>

			<%= f.fields_for :bets %>
			 <p><%= f.link_to_add "Add bet", :bets %></p>
	

			<%=f.submit "Save changes", class: "btn btn-large btn-primary" %>
			<%end%>
		</div>
	</div>
	</div>