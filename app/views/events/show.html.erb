		<tr>
		<td><%= @event.id %> </td>
		<td><%= @event.name %></td>
			<td><%= @event.date %></td>
			<td><%=@event.result%> </td>
			<td><%=@event.active %></td>
			<td><%=League.find(@event.league_id).name%></td>
