<% provide(:title, @event.name) %>
<br>
<div id = "repleaceable">

		<center>
		<table border=1>
		<tr>
		<th>id</th>
		<th>Name</th>
		<th>date</th>
		<th>result</th>
		<th>Active</th>
		<th>League</th>
		
		<tr/>
		<tr>
		<td><%= @event.id %> </td>
		<td><%= @event.name %></td>
			<td><%= @event.date %></td>
			<td><%=@event.result%> </td>
			<td><%=@event.active %></td>
			<td><%=League.find(@event.league_id).name%></td>
		
			</tr>
			
			</table>

<br>
<% (@bets).each do |bet| %>
	Name: <%=bet.name%>
	<br>

	<table style = "width:500px" border=1>
	<tr><th>Name</th>
	<th>Odd</th>
	</tr>
	<% betItems = bet.bet_items%>
  
		
		
		<%betItems.each do |betItem| %>
		<tr>
			<td><%=betItem.name%></td>
			<td><%=betItem.odds%></td>
			</tr>

			
		<%end%>
		</table>
		
		
	<%end%>
	<%if current_user.role_id <3 %>
		<%= link_to "edit", edit_event_path(@event) %> 
		<%end%>	
</center>
		
		
</div>


