			</tr>
			
			</table>

<br>
<% (@bets).each do |bet| %>
	Name: <%=bet.name%>
	<br>
	<div class="table">
	<aside class="span10" >
	<table style = "width:500px" border=1>
	<tr><th>Name</th>
	<th>Odd</th>
	</tr>
	<% betItems = bet.bet_items%>
  
		
		
		<%betItems.each do |betItem| %>
		<tr>
			<td><%=betItem.name%></td>
			<td><%=betItem.odds%></td>
			</tr>

			
		<%end%>
		</table>
		
		</aside>
		</div>
	<%end%>
	<%if current_user.role_id <3 %>
		<%= link_to "edit", edit_event_path(@event) %> 
