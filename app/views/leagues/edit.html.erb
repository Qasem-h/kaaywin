<% provide(:title, 'Edit League') %>
<h1>Please enter league details: </h1>
<div class = "row">
	<div class = "span6 offset3">
		<%=form_for(@league) do |f| %>
			<%=render 'shared/error_messages_leagues' %>
			<%= f.label :name %>
			<%= f.text_field :name %>

			
			

			<%=f.label :comments%>
			<%=f.text_field :comments %>

			<%=f.label :active%>
			<%=check_box("league", "active", {}, "yes", "no") %>
			<br><br>
			<%=f.submit "Save changes", class: "btn btn-large btn-primary" %>
			<%end%>
		</div>
	</div>	