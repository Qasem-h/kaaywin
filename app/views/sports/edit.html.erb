<% provide(:title, 'Edit Sport') %>
<div class = "itemForm">
<h1>Please enter league details: </h1>
<div class = "row">
	<div class = "span3 offset1">
		<%=form_for(@sport) do |f| %>
			<%=render 'shared/error_messages_sports' %>
			<%= f.label :name %>
			<%= f.text_field :name %>

			
			<br><br>
			<%=f.submit "Save changes", class: "btn btn-large btn-primary" %>
			<%end%>
		</div>
	</div>	
</div>